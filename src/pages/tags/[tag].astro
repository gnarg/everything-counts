---
import BaseLayout from '../../layouts/BaseLayout.astro';
import type { MarkdownInstance } from 'astro';

export async function getStaticPaths() {
  const allPosts: MarkdownInstance<Record<string, any>>[] = await Astro.glob('../../content/blog/*.md');
  const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
  return uniqueTags.map((tag) => {
    const posts = allPosts.filter((post) => post.frontmatter.tags && post.frontmatter.tags.includes(tag));
    return {
      params: { tag },
      props: { posts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---
<BaseLayout title={tag} description={tag}>
  <p>Posts tagged with <span style="font-weight: bold;">{tag}</span></p>
  <ul>
    {posts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
  </ul>
</BaseLayout>
